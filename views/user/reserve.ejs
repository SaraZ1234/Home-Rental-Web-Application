<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Checkout - <%= home.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
      }

      .checkout-wrapper {
        max-width: 1200px;
        margin: 30px auto;
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border-radius: 10px;
        overflow: hidden;
      }

      .checkout-content {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
      }

      .form-section,
      .summary-section {
        padding: 30px;
        flex: 1 1 100%;
      }

      .form-section {
        background-color: #ffffff;
        width: 100%;
        max-width: none; /* remove any hard limit */
        flex: 1;
      }

      .summary-section {
        background-color: #f4f4f4;
        flex: 1;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 20px;
      }

      form {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-top: 15px;
        font-weight: 500;
        font-size: 15px;
      }

      input[type="text"],
      input[type="tel"],
      input[type="date"] {
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-top: 5px;
      }

      .submit-btn {
        margin-top: 25px;
        padding: 10px;
        background-color: #28a745;
        color: white;
        font-size: 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      .submit-btn:hover {
        background-color: #218838;
      }

      .back-link {
        margin-top: 20px;
        display: inline-block;
        font-size: 14px;
        color: #007bff;
        text-decoration: none;
      }

      .back-link:hover {
        text-decoration: underline;
      }

      .success-message {
        background-color: #d4edda;
        color: #155724;
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #c3e6cb;
      }

      .price-box {
        background-color: #fff;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 0 6px rgba(0, 0, 0, 0.05);
      }

      .price-item,
      .total-price {
        display: flex;
        justify-content: space-between;
        margin-top: 12px;
        font-size: 15px;
      }

      .total-price {
        font-weight: bold;
        border-top: 1px solid #ccc;
        padding-top: 15px;
        margin-top: 20px;
      }

      /* Responsive Styling */
      @media screen and (min-width: 768px) {
        .form-section {
          flex: 0 0 50%;
          max-width: 50%;
        }

        .summary-section {
          flex: 0 0 50%;
          max-width: 50%;
        }
      }

      @media screen and (max-width: 767px) {
        .form-section,
        .summary-section {
          max-width: 100%;
          flex: 1 1 100%;
        }

        h1 {
          font-size: 20px;
        }

        .submit-btn {
          font-size: 14px;
        }
      }
      @media screen and (max-width: 767px) {
        h1 {
          font-size: 20px;
          line-height: 1.2;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <div class="checkout-wrapper">
      <div class="checkout-content">
        <!-- Form Section -->
        <div class="form-section">
          <h1>Confirm Your Stay at <%= home.title %></h1>

          <% if (typeof success !== 'undefined' && success) { %>
          <div class="success-message">
            ✅ Your reservation was successfully submitted!
          </div>
          <!-- <p><strong>Guest:</strong> <%= name %></p>
          <p>
            <strong>Dates:</strong> <%= checkin %> to <%= checkout %> (<%=
            nights %> nights)
          </p> -->
          <% } %>

          <form action="/host/home/reserve/<%= home.id %>" method="POST">
            <label for="name">Your Full Name:</label>
            <input type="text" name="name" id="name" required />

            <label for="contact">Contact Number:</label>
            <input type="tel" name="contact" id="contact" required />

            <label for="checkin">Check-In Date:</label>
            <input type="date" name="checkin" id="checkin" required />

            <label for="checkout">Check-Out Date:</label>
            <input type="date" name="checkout" id="checkout" required />

            <button type="submit" class="submit-btn">Confirm & Pay</button>
          </form>

          <a href="/host/all-homes" class="back-link">← Back to Listings</a>
        </div>

        <!-- Price Summary Section -->
        <div class="summary-section">
          <h2>Price Summary</h2>
          <div class="price-box">
            <% if (typeof success !== 'undefined' && success) { %>
            <div class="price-item">
              <span>Rs.<%= home.price %> x <%= nights %> nights</span>
              <span>= Rs.<%= totalStayPrice %></span>
            </div>
            <div class="price-item">
              <span>Cleaning Fee</span>
              <span>Rs. <%= cleanFee %></span>
            </div>
            <div class="price-item">
              <span>Service Fee</span>
              <span>Rs. <%= serviceFee %></span>
            </div>
            <div class="total-price">
              <span>Total</span>
              <span>= Rs.<%= totalAmount %></span>
            </div>
            <% } else { %>
            <div class="price-item">
              <span>Rs.<%= home.price %> x 2 nights</span>
              <span>= Rs.<%= home.price * 2 %></span>
            </div>
            <div class="price-item">
              <span>Cleaning Fee</span>
              <span>Rs. <%= cleanFee %></span>
            </div>
            <div class="price-item">
              <span>Service Fee</span>
              <span>Rs. <%= serviceFee %></span>
            </div>
            <div class="total-price">
              <span>Total</span>
              <span>= Rs.<%= home.price * 2 + cleanFee + serviceFee %></span>
            </div>
            <% } %>
          </div>

          <p style="margin-top: 20px; font-size: 13px; color: #666">
            By clicking “Confirm & Pay,” you agree to Airbnb’s cancellation
            policy and terms.
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
