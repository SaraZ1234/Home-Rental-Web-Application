<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Favorite Homes</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        /* padding-top: 90px; */
      }

      .navbar-airbnb {
        background-color: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 10px 20px;
      }

      .navbar-brand {
        font-weight: bold;
        font-size: 1.5rem;
        color: #ff385c;
      }

      .nav-link {
        color: #222 !important;
        font-weight: 500;
        margin-right: 1rem;
      }

      .nav-link:hover {
        color: #ff385c !important;
      }

      .navbar-toggler {
        border: none;
      }

      @media (max-width: 768px) {
        .navbar-airbnb {
          padding: 8px 16px;
        }
      }

      h1 {
        text-align: center;
        margin: 30px 0;
        color: #2c3e50;
        font-weight: 600;
      }

      .container-homes {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 40px 20px;
      }

      .card-home {
        width: 18%;
        min-width: 200px;
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
      }

      .card-home:hover {
        transform: translateY(-6px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
      }

      .card-home img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
      }

      .card-body {
        padding: 12px 16px;
      }

      .card-body h6 {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 4px;
        color: #212529;
      }

      .card-body small {
        color: #6c757d;
        font-size: 0.85rem;
      }

      .price-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background-color: #ff385c;
        color: #fff;
        padding: 5px 10px;
        font-size: 0.8rem;
        border-radius: 20px;
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }

      /* Responsive */
      @media (max-width: 1200px) {
        .card-home {
          width: 22%;
        }
      }

      @media (max-width: 992px) {
        .card-home {
          width: 30%;
        }
      }

      @media (max-width: 768px) {
        .card-home {
          width: 45%;
        }
      }

      @media (max-width: 576px) {
        .card-home {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-airbnb sticky-top">
      <div class="container">
        <a class="navbar-brand" href="/host/home">MyBnB</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarContent"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarContent"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/host/all-homes">Explore</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/host/home/remove-reservation"
                >Reservations</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/host/favorites">Favourites</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/host">Add Home</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Heading -->
    <h2 class="text-center mt-4 mb-3">My Favorite Homes</h2>

    <!-- âœ… Cards -->
    <div class="container-homes">
      <% if (homes && homes.length > 0) { %> <% homes.forEach(home => { %>
      <div class="card-home">
        <img src="<%= home.imageUrl %>" alt="<%= home.title %>" />
        <div class="price-badge">$<%= home.price %></div>
        <div class="card-body">
          <h6><%= home.title %></h6>
          <small><%= home.location %></small>
        </div>
      </div>
      <% }) %> <% } else { %>
      <div class="text-center mt-5">No favorite homes added yet.</div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
